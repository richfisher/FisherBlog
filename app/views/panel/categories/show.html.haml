#category_page
  .title.clear
    %h2
      = @category.name
      = link_to '[ Edit ]', edit_category_path(@category)

  .articles
    -for article in @category.articles
      .article
        .title
          =link_to article.title,article_path(article)
          = link_to '[ Edit ]', edit_panel_article_path(article)
        .datetime
          =format_datetime article.created_at
